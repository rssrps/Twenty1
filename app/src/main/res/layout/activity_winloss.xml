<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_winloss"
    android:layout_width="match_parent"
    android:background="@drawable/black_bkground"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raman.twenty1.raman.example.raman.twenty1.winloss">

    <ImageView
        app:srcCompat="@drawable/splashimage"
        android:id="@+id/winorloss"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="340dp"
        android:layout_height="300dp" />

    <ImageView
        app:srcCompat="@drawable/quitgame"
        android:id="@+id/quitgame"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/playagain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <ImageView
        app:srcCompat="@drawable/playagain"
        android:id="@+id/playagain"
        android:layout_height="80dp"
        android:layout_width="200dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/winorloss"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
