<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_achievements"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/home_background1"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raman.twenty1.raman.example.raman.twenty1.achievements">

    <TextView
        android:text="userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:layout_marginTop="12dp"
        android:textColor="#FFD700"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/userid"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Won:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:textSize="16sp"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="12dp"
        android:id="@+id/textView8" />

    <TextView
        android:text="Lost:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:textSize="16sp"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="12dp"
        android:id="@+id/textView9" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/totalplayed"
        android:id="@+id/totalwon" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/totalwon"
        android:id="@+id/totallost" />

    <TextView
        android:text="Played:  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/userid"
        android:layout_toStartOf="@+id/userid" />

    <TextView
        android:text="Play 10 games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textView14"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="Win 10 games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="23dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:text="Five in a row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/accept"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignStart="@+id/win10"
        android:id="@+id/fiverow" />

    <ImageView
        app:srcCompat="@drawable/accept"
        android:id="@+id/win10"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignStart="@+id/play10" />

    <TextView
        android:text="Achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFD700"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:id="@+id/textView13"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:id="@+id/totalplayed"
        android:layout_alignBottom="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@drawable/accept"
        android:id="@+id/play10"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toEndOf="@+id/textView13"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/totallost"
        android:id="@+id/consecutive" />

    <TextView
        android:text="Consecutive:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

</RelativeLayout>
